<!DOCTYPE html>
<html>
<head>
  <title> LibSys </title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
	  <div class="jumbotron">
	    <h1>LibSys</h1>      
	    <p>A library management system</p>
	  </div>
	</div>
	<div id="main-container" class="container">
	    <div class="row">
	      	<%x = logged_in? %>
			<% if !(x.nil?) %>
	        	<div id="sidebar" class="col-xs-3">
	        		<p>Hi, <%= x.name %></p>
	        		<ul class="nav nav-pills nav-stacked">
	        			<li role="presentation" class="active"><%= link_to 'My Account', current_user %></li>
						<li role="presentation"><%= link_to 'Show all Books', books_path %></li>
						<% if is_admin? %>	
					  		<li role="presentation"><%= link_to 'Show all Admins', admins_path %></li>
					  		<li role="presentation"><%= link_to 'Show all Members', members_path %></li>
					  		<li role="presentation"><%= link_to 'Add an Admin', new_admin_path %></li>
					  		<li role="presentation"><%= link_to 'Add a Book', new_book_path %></li>
						<%end%>
					</ul>
	        	</div>
	        	<div id="content" class="col-xs-9">
	        		<%= yield%>
	        	</div>
	        <%else%>
	        	<div id="content" class="col-xs-12">
	        		<%= yield %>
	        	</div>
	        <%end%>    
	    </div>
	</div>
	<div class="container">
		        <ul class="nav nav-pills">
		        	<li role="presentation" class="active"><%= link_to "Home" , "/" %></li>
		  			<li role="presentation"><%= link_to 'Back', :back %></li>
		  			<li role="presentation"><%=  link_to 'Logout', logout_path, method: "delete" if logged_in?%></li>
				</ul>
	</div>
</body>
</html>
